<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dev.adenilson.deathcalc.result">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TableLayout
            android:id="@+id/tableLayoutResultNascimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <TableRow
                android:id="@+id/tableRowNascimentoTitulo"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data de nascimento:"
                    android:textAppearance="@android:style/TextAppearance.Medium" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRowDataNascimento"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewResultNascimento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/tableLayoutResultExpectativa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tableLayoutResultNascimento"
            android:paddingBottom="10dp">

            <TableRow
                android:id="@+id/tableRowExpectativaTitulo"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewExpectativaTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Medium" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRowExpectativa"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewResultExpectativa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

        </TableLayout>

        <TableLayout
            android:id="@+id/tableLayoutResultIdade"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tableLayoutResultExpectativa"
            android:paddingBottom="10dp">

            <TableRow
                android:id="@+id/tableRowIdadeTitulo"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Idade atual:"
                    android:textAppearance="@android:style/TextAppearance.Medium" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRowIdade"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewResultIdade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/tableLayoutResultFumo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tableLayoutResultIdade"
            android:paddingBottom="10dp">

            <TableRow
                android:id="@+id/tableRowFumoTitulo"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewFumaTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fuma hÃ¡ x anos:"
                    android:textAppearance="@android:style/TextAppearance.Medium" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRowFumo"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewResultFuma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/tableLayoutResultReligiao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tableLayoutResultFumo"
            android:paddingBottom="10dp">

            <TableRow
                android:id="@+id/tableRowReligiaoTitulo"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewReligiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Medium" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRowReligiao"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewResultReligiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/tableLayoutResultHumor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tableLayoutResultReligiao"
            android:paddingBottom="10dp">

            <TableRow
                android:id="@+id/tableRowHumorTitulo"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewHumor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:visibility="visible" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRowHumor"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewResultHumor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/tableLayoutResultFinal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tableLayoutResultHumor"
            android:paddingBottom="10dp">

            <TableRow
                android:id="@+id/tableRowResultTitulo"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Essa pessoa tem mais:"
                    android:textAppearance="@android:style/TextAppearance.Medium" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRowResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/tableLayoutResultFinal"
            android:layout_centerHorizontal="true"
            android:onClick="voltar"
            android:text="Voltar" />

    </RelativeLayout>
</ScrollView>
